<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER"
      spacing="20"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.roy_2207099_crictrack_desktop.AdminLoginController"
      style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #ffffff); -fx-padding: 40;">

        <VBox alignment="CENTER"
              spacing="18"
              maxWidth="380"
              style="-fx-background-color: white;
                 -fx-padding: 30;
                 -fx-background-radius: 18;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 15, 0.3, 0, 5);">

        <Label text="Admin Login"
               style="-fx-font-size: 26px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #1e88e5;" />

        <TextField fx:id="txtEmail"
                   promptText="Admin Email"
                   prefWidth="260"
                   style="-fx-background-radius: 10;
                          -fx-padding: 10;
                          -fx-font-size: 14;" />

        <PasswordField fx:id="txtPassword"
                       promptText="Password"
                       prefWidth="260"
                       styleClass="password-field" />

        <Button text="Login"
                prefWidth="260"
                onAction="#onLogin"
                styleClass="login"/>

    </VBox>

</VBox>
